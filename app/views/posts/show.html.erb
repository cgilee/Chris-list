<div class="container-fluid">
  <div class="row">

    <div class="col-12 pb-2">
    </div>

  </div>
</div>


<div class="container-fluid">
  <div class="row">

    <div class="col-xs-8 col-sm-8 col-md-6 col-lg-2 mx-auto">
      <%= render "brand" %>

      <p><%= link_to "Create a Post", posts_new_path, class:"btn btn-aqua btn-block shadow" %></p>

      <div class="pb-3 h5">
      </div>

      <%= render "form" %>
    </div>

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10">
			<%= render "pagination" %>

			<div class="row pb-4">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <% Post.all.each do |card| %>
            <div class="card-deck pb-4">
              <div class="card shadow">

                <img src="/silas_issac.jpg" class="card-img-top" alt="...">
               
                <div class="card-body">
                  <h5 class="card-title text-truncate"><%= card.title %></h5>
                  <p class="card-text font-weight-lighter text-truncate"><%= card.description %></p>
                </div>

                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><%= card.price_cents %></li>
                </ul>

                <div class="card-footer">
                  <%= link_to "Visit Listing", "#" %>
                </div>

              </div>
            </div>
          <% end %>
        </div>

			</div>
    </div>

  </div>
</div>
