<div class="container-fluid">

  <h1 class="display-5 text-center pb-2">Choose Your City:</h1>

  <div class="row mx-auto">
    <div class="col-xl-6 col-lg-6 col-md-7 col-sm-9 col-xs-10 mx-auto pb-3">

      <% City.all.each do |ratio| %>
        <div class="form-check">
          <%= radio_button :post, :city_id, ratio.id, class: "form-check-input", :required => true %>
          <label class="form-check-label" for="exampleRadios1">
            <%= ratio.name %>
          </label>
        </div>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col-xl-6 col-lg-6 col-md-7 col-sm-9 col-xs-10 mx-auto pb-3">
      <p>
        <a class="btn btn-light float-left" href="/post/new/county" role="button">&ltrif; Prev</a>
        <a class="btn btn-light float-right" href="/post/new/type" role="button">Next &rtrif;</a>
      </p>
    </div>
  </div>

</div>
