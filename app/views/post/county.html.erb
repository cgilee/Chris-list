<div class="container-fluid">
  <div class="row">

    <div class="col-12 mx-auto">
      <%= render "breadcrumb" %>
    </div>

      <%= render "button_list" %>
  </div>

  <h1 class="d-5 text-center pb-2">Choose Your County:</h1>

  <div class="row mx-auto">
    <div class="col-xl-6 col-lg-6 col-md-7 col-sm-9 col-xs-10 mx-auto pb-3">

      <% County.all.each do |ratio| %>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
        <label class="form-check-label" for="exampleRadios1">
          <%= ratio.name %>
        </label>
      </div>
    <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col-xl-6 col-lg-6 col-md-7 col-sm-9 col-xs-10 mx-auto pb-3">
      <p>
        <a class="btn btn-light float-right" href="/post/new/city" role="button">Next &rtrif;</a>
      </p>
    </div>
  </div>

</div>
