      <div class="pb-2">
        <span class="badge badge-light p-3"><p class="h6 my-auto font-weight-light">
          condition: <strong>New</strong></p>
        </span>
      </div>

      <span class="badge badge-light p-3"><p class="h6 my-auto font-weight-light">
        manufacturer: <strong><%= Faker::App.name %></strong></p>
      </span>
    </div>

  </div>

  <div class="row mx-auto">
    <div class="col-11 mx-auto">
      <p class="lead text-justify"><%= Faker::Lorem.paragraph(20) %></p>

    <%= render "metalinks" %>
    </div>
  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-7 col-sm-9 col-xs-10 mx-auto pb-3">
      <p>
