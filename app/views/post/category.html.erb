    <div class="col-12 mx-auto">
      <%= render "breadcrumb" %>
    </div>

      <%= render "button_list" %>
  </div>

  <h1 class="display-5 pb-2 text-center">Choose your item's category:</h1>
 
  <div class="row mx-auto">
