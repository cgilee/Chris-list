<div class="row pb-2">

  <div class="col-xs-10 col-sm-6 col-md-4 col-lg-4 text-truncate">
    <ul class="list-group list-group-flush">
      <% Category.all.to_a[0..2].each do |category| %>
        <%= link_to highlight(category.name, params[:search]), city_category_path(@city, category), class:"list-group-item list-group-item-action bg-light font-weight-bold text-truncate" %>
        <%= render "city_subcategories", subcategories: category.subcategories %>
      <% end %>
    </ul>
  </div>

  <div class="col-xs-10 col-sm-6 col-md-4 col-lg-4 text-truncate">
